.container {
    background-color: #fff;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.main {
    position: relative;
    flex: 1;
    display: flex;
}
.tips {
    display: block;
    font-size: 23rpx;
    line-height: 32rpx;
    color: #FFF7EA;
    padding: 23rpx 20rpx;
    background-color: #FFA421;
}
.province-list {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
}
.province-list view {
    position: relative;
    font-size: 30rpx;
    line-height: 42rpx;
    padding: 29rpx 32rpx;
}
.province-list .current {
    background-color: #F1F1F1;
}
.province-list view:before {
    content: "";
    position: absolute;
    left: 32rpx;
    right: 0;
    top: 0;
    height: 1rpx;
    background-color: #E4E7E8;
}
.province-list view:first-child:before {
    display: none;
}
.ui-arrow_right:after {
    position: absolute;
    right: 30rpx;
    top: 50%;
    margin-top: -8rpx;
}

.city-list {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 50%;
    z-index: 10;
    background-color: #F1F1F1;
}
.city-list view {
    font-size: 30rpx;
    line-height: 42rpx;
    padding: 18rpx 30rpx;
}
.city-list .current {
    background-color: #E4E4E4;
}
.menu {
    display: flex;
    border-top: 1rpx solid #E4E7E8;
    background-color: #fff;
    align-items: center;
}
.menu__bd {
    flex: 1;
    padding: 20rpx 30rpx;
}
.menu__text {
    font-size: 24rpx;
    color: #4E5165;
}
.menu__list {
    overflow: hidden;
    padding-left: 5rpx;
}
.tag {
    float: left;
    line-height: 40rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    padding: 0 17rpx;
    background-color: #C5CAD0;
    border-radius: 20rpx;
    color: #fff;
    margin: 16rpx 20rpx 0 0;
}
.tag text {
    display: inline-block;
    vertical-align: middle;
}
.tag:after {
    content: "x";
    margin-left: 10rpx;
}
.tag_default:after {
    display: none;
}
.menu .ui-btn {
    width: 200rpx;
    margin-right: 30rpx;
}